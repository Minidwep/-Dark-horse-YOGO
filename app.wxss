@import "./styles/iconfont.wxss";

page,view,text,swiper,swiper-item,image,navigator{
    padding: 0;
    margin: 0;
    border-style: border-box;
}

/* 
    主题颜色 通过变量来实现
    1.less 中 存在变量 这个知识
    2.原生的css 和 wxss也支持变量
*/

page {
    /* 定义主题颜色 */
    --themeColor: #eb4450;
    /* 定义统一字体大小 大小是 375px 
    1px = 2rpx
    14px = 28rpx
    */
    font-size: 28rpx;

}